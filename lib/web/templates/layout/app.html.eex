<!DOCTYPE html>
<html lang="en">
  <%= render("_head.html", assigns) %>

  <body>
    <div class="main-wrapper">
      <%= render("_header.html", assigns) %>

      <div class="main container-fluid">
        <div class="content-area">
          <div class="content-left left-menu-wrapper">
            <div class="menu-close"><a href="javascript:;"><i class="icon-close-custom"></i></a></div>
            <div class="logo side-nav-logo">
              <img src="<%= Routes.static_path(@conn, "/images/logo-png-ss.png") %>" alt="City Backlog Logo" title="City Backlog">
            </div>
            <div class="side-nav font-semibold">
              <ul class="mp-none">
                <li class='<%= tab_selected(@conn, "challenges") %>'>
                  <%= link(to: Routes.challenge_path(@conn, :index)) do %>
                    <i class="icon-Ideas"></i><span>Challenges</span>
                  <% end %>
                </li>
                <li class='<%= tab_selected(@conn, "accounts") %>'>
                  <%= link(to: Routes.account_path(@conn, :index)) do %>
                    <i class="icon-Participants"></i><span>Participants</span>
                  <% end %>
                </li>
                <li class='<%= tab_selected(@conn, "teams") %>'>
                  <%= link(to: Routes.team_path(@conn, :index)) do %>
                    <i class="icon-Teams"></i><span>Teams</span>
                  <% end %>
                </li>
              </ul>
            </div>
          </div>

          <div class="content-right">
            <%= if flash = get_flash(@conn, :info) do %>
              <div class="alert alert-primary" role="alert">
                <%= flash %>
              </div>
            <% end %>
            <%= if flash = get_flash(@conn, :error) do %>
              <div class="alert alert-danger" role="alert">
                <%= flash %>
              </div>
            <% end %>

            <%= render @view_module, @view_template, assigns %>
          </div>
        </div>
      </div>

      <script type="text/javascript" src="<%= Routes.static_path(@conn, "/js/app.js") %>"></script>

      <%= render("_footer.html", assigns) %>
    </div>
  </body>
</html>
